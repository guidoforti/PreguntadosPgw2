<div class="container mt-5">
    <h2>Panel de RevisiÃ³n ({{rol}})</h2>

    <div class="row">
        <div class="col-md-6">
            <h3>Sugerencias Pendientes ({{count_pendientes}})</h3>
            <ul class="list-group">
                {{#pendientes}}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <strong>{{pregunta_id}}</strong>: {{texto_pregunta}}
                        <small class="text-muted"> (Sugerida por: {{creador}})</small>
                    </div>
                    <div>
                        <a href="/editor/aprobar?id={{pregunta_id}}" class="btn btn-sm btn-success me-2">Aprobar</a>
                        <a href="/editor/denegar?id={{pregunta_id}}" class="btn btn-sm btn-danger">Denegar</a>
                    </div>
                </li>
                {{/pendientes}}
                {{^pendientes}}
                <li class="list-group-item">No hay preguntas nuevas para revisar.</li>
                {{/pendientes}}
            </ul>
        </div>

        <div class="col-md-6">
            <h3>Reportes Pendientes ({{count_reportes}})</h3>
            <ul class="list-group">

                {{#reportes}}
                    <li class="list-group-item list-group-item-warning d-flex justify-content-between align-items-start">

                        <div class="me-3">

                            <div class="mb-2"> <strong>Pregunta:</strong> {{texto_pregunta}}
                                <small class="text-muted">(ID: {{pregunta_id}})</small>
                            </div>

                            <div class="mb-2"> <strong>Motivo:</strong>
                                <span class="text-muted fst-italic">"{{motivo}}"</span>
                            </div>

                            <div> <strong>Reportado por:</strong>
                                <small>{{reportador}}</small>
                            </div>
                        </div>

                        <div class="d-grid gap-2 flex-shrink-0">
                            <a class="nav-link no-ajax-load btn btn-sm btn-success" href="/editor/aprobarReporte?reporte_id={{reporte_id}}">Aprobar Reporte</a>
                            <a class="nav-link no-ajax-load btn btn-sm btn-danger" href="/editor/rechazarReporte?reporte_id={{reporte_id}}">Rechazar Reporte</a>
                        </div>

                    </li>
                {{/reportes}}

                {{^reportes}}
                    <li class="list-group-item">No hay reportes pendientes.</li>
                {{/reportes}}
            </ul>
        </div>
    </div>
</div>