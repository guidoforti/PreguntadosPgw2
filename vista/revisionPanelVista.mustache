<div class="container mt-5">
    <h2>Panel de Revisión ({{rol}})</h2>

    <div class="row">
        <div class="col-md-6">
            <h3>Sugerencias Pendientes ({{count_pendientes}})</h3>
            <ul class="list-group">
                {{#pendientes}}
                    <li class="list-group-item d-flex justify-content-between align-items-center">

                        <div class="text-break me-3 w-100">
                            <strong>{{pregunta_id}}</strong>: {{texto_pregunta}}
                            <small class="text-muted"> (Sugerida por: {{creador}})</small>

                            <div class="mt-2 p-2 bg-light border rounded">
                                <strong class="d-block mb-1" style="font-size: 0.85rem;">Opciones:</strong>
                                <ul class="list-unstyled mb-0" style="font-size: 0.9rem;">
                                    {{#respuestas}}
                                        <li class="{{#es_correcta}}text-success fw-bold{{/es_correcta}}">
                                            {{#es_correcta}}✅{{/es_correcta}}
                                            {{^es_correcta}}⚪{{/es_correcta}}
                                            {{texto_respuesta}}
                                        </li>
                                    {{/respuestas}}

                                    {{^respuestas}}
                                        <li class="text-danger small">⚠️ No se cargaron opciones.</li>
                                    {{/respuestas}}
                                </ul>
                            </div>
                        </div>

                        <div class="flex-shrink-0 ms-2">
                            <a href="/editor/aprobar?id={{pregunta_id}}" class="btn btn-sm btn-success mb-2 d-block no-ajax-load">Aprobar</a>
                            <a href="/editor/denegar?id={{pregunta_id}}" class="btn btn-sm btn-danger d-block no-ajax-load">Denegar</a>
                        </div>
                    </li>
                {{/pendientes}}

                {{^pendientes}}
                    <li class="list-group-item">No hay preguntas nuevas para revisar.</li>
                {{/pendientes}}
            </ul>
        </div>

        <div class="col-md-6">
            <h3>Reportes Pendientes ({{count_reportes}})</h3>
            <ul class="list-group">

                {{#reportes}}
                    <li class="list-group-item list-group-item-warning d-flex justify-content-between align-items-start">

                        <div class="me-3 text-break w-100">
                            <div class="mb-2"> <strong>Pregunta:</strong> {{texto_pregunta}}
                                <small class="text-muted">(ID: {{pregunta_id}})</small>
                            </div>

                            <div class="mb-2"> <strong>Motivo:</strong>
                                <span class="text-muted fst-italic">"{{motivo}}"</span>
                            </div>

                            <div> <strong>Reportado por:</strong>
                                <small>{{reportador}}</small>
                            </div>
                        </div>

                        <div class="d-grid gap-2 flex-shrink-0 ms-2">
                            <a class="btn btn-sm btn-success no-ajax-load" href="/editor/aprobarReporte?reporte_id={{reporte_id}}">Aprobar</a>
                            <a class="btn btn-sm btn-danger no-ajax-load" href="/editor/rechazarReporte?reporte_id={{reporte_id}}">Rechazar</a>
                        </div>

                    </li>
                {{/reportes}}

                {{^reportes}}
                    <li class="list-group-item">No hay reportes pendientes.</li>
                {{/reportes}}
            </ul>
        </div>
    </div>
</div>