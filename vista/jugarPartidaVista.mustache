<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <form action="/jugarPartida/responder" method="POST" id="pregunta-form" class="card shadow-sm p-4 ">

                <div class="mb-3 text-center">
                    <div class="fw-bold mb-2 text-secondary" style="font-size:1.05rem;">
                        Pregunta {{preguntas_mostradas}} de {{total_preguntas}}
                    </div>

                    <input type="hidden" name="pregunta_id" value="{{ pregunta_id }}">

                    <input type="hidden" name="respuesta_id" id="respuesta-id-hidden" value="">

                    <div class="progress" role="progressbar"
                         aria-label="Progreso de la partida"
                         aria-valuenow="{{preguntas_mostradas}}"
                         aria-valuemin="0"
                         aria-valuemax="{{total_preguntas}}"
                         style="height: 25px;">

                        <div id="miProgressBar"
                             class="progress-bar fw-bold"
                             style="width: {{porcentaje_progreso}}%; background-color: {{pregunta.color_hex}};">
                            {{porcentaje_progreso}}%
                        </div>
                    </div>
                </div>

                <div class="text-center mb-4">
                    <div id="timer-display" class="mx-auto"
                         style="border-color: {{pregunta.color_hex}}; color: {{pregunta.color_hex}};">
                        <span id="timer">{{ timer }}</span>
                    </div>
                </div>

                <div class="text-center mb-4 p-2 rounded-3 text-white fw-bold shadow-sm"
                     style="background-color: {{pregunta.color_hex}};">
                    Categoría: {{pregunta.categoria}}
                </div>
                <h2 class="h3 text-center mb-4 fw-normal">{{pregunta.texto_pregunta}}</h2>

                <div class="d-grid gap-3">
                    {{#respuestas}}
                        <div>
                            <input  type="radio"
                                    class="btn-check"
                                    name="respuesta_id_opcion" id="opcion-{{ respuesta_id }}"
                                    id="opcion-{{ respuesta_id }}"
                                    value="{{ respuesta_id }}"
                                    autocomplete="off"
                                    required>

                            <label class="btn btn-outline-primary btn-lg w-100" for="opcion-{{ respuesta_id }}">
                                {{ texto_respuesta }}
                            </label>
                        </div>
                    {{/respuestas}}
                </div>

                <button type="submit" class="btn btn-success btn-lg w-100 mt-4">Responder</button>
            </form>
        </div>
    </div>
</div>

<script>
    const timerElement = document.getElementById('timer');
    const formElement = document.getElementById('pregunta-form');
    let tiempoRestante = parseInt(timerElement.innerText);
    let respondido = false;
    let intervalo = setInterval(actualizarTimer, 1000);

    document.querySelectorAll('input[name="respuesta_id_opcion"]').forEach(radio => {
        radio.addEventListener('change', () => {
            document.getElementById('respuesta-id-hidden').value = radio.value;
        });
    });

    function actualizarTimer() {
        tiempoRestante--;
        timerElement.innerText = tiempoRestante;

        if (tiempoRestante <= 0) {
            if (!respondido) {
                procesarRespuesta();
            }
        }
    }

    formElement.addEventListener('submit', function (e) {
        e.preventDefault();

        if (!respondido) {
            procesarRespuesta();

        } else {
            formElement.submit();
        }
    });

    function procesarRespuesta() {
        if (respondido) return;

        clearInterval(intervalo);
        respondido = true;
        bloquearOpciones();

        const formData = new FormData(formElement);

        fetch('/jugarPartida/verificarRespuestaAjax', {
            method: 'POST',
            body: formData
        })
                .then(response => response.json())
                .then(data => {
                    const idCorrectaServidor = data.id_correcta;
                    mostrarResultadoVisual(idCorrectaServidor);
                })
                .catch(error => {
                    console.error('Error:', error);
                    mostrarResultadoVisual(null);
                });
    }

    function mostrarResultadoVisual(idCorrecta) {
        const radios = document.querySelectorAll('input[name="respuesta_id_opcion"]');
        const radioSeleccionado = document.querySelector('input[name="respuesta_id_opcion"]:checked');

        let idSeleccionada = radioSeleccionado ? radioSeleccionado.id : null;
        let idCorrectaDOM = `opcion-${idCorrecta}`;

        radios.forEach(radio => {
            const label = radio.nextElementSibling;
            if (radio.id == idCorrectaDOM) {
                label.classList.remove('btn-outline-primary');
                label.classList.add('btn-success');
            }
        });

        if (radioSeleccionado) {
            if (idSeleccionada !== idCorrectaDOM) {
                const labelSeleccionada = radioSeleccionado.nextElementSibling;
                labelSeleccionada.classList.remove('btn-outline-primary');
                labelSeleccionada.classList.add('btn-danger');
            }
        }

        const boton = formElement.querySelector('button[type="submit"]');
        boton.innerText = 'Continuar';
        boton.classList.remove('btn-success');
        boton.classList.add('btn-primary');
    }

    function bloquearOpciones() {
        document.querySelectorAll('input[name="respuesta_id_opcion"]').forEach(radio => {
            radio.disabled = true;
            radio.nextElementSibling.classList.add('disabled');
        });
    }

    let seFueDeLaPestana = false;

    document.addEventListener("visibilitychange", () => {
        if (document.visibilityState === 'hidden' && !seFueDeLaPestana && intervalo) {
            seFueDeLaPestana = true;
            clearInterval(intervalo);
            intervalo = null;

            Swal.fire({
                title: '¡Tramposo!',
                text: "Cambiaste de pestaña. Esta pregunta se marcará como incorrecta.",
                icon: 'warning',
                confirmButtonText: 'Entendido',
                allowOutsideClick: false,
                allowEscapeKey: false
            }).then(() => {
                bloquearOpciones();
                formElement.submit();
            });
        }
    });
</script>


<style>
