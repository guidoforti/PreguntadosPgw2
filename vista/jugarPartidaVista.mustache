    }

    .btn-check:disabled + .btn.btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        color: #fff;
        text-align: left;
        padding-top: 1rem;
        padding-bottom: 1rem;
        padding-left: 1.5rem;
    }

    .btn-check:disabled + .btn-outline-primary {
        opacity: 0.65;
    }

</style>