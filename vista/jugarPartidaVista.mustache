<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <form action="/jugarPartida/responder" method="POST" id="pregunta-form" class="card shadow-sm p-4 ">

                <div class="mb-3 text-center">
                    <div class="fw-bold mb-2" style="font-size:1.05rem;">
                        {{preguntas_mostradas}} / {{total_preguntas}}
                    </div>

                    <div class="progress" role="progressbar"
                         aria-label="Progreso de la partida"
                         aria-valuenow="{{preguntas_mostradas}}"
                         aria-valuemin="0"
                         aria-valuemax="{{total_preguntas}}"
                         style="height: 25px;">

                        <div id="miProgressBar"
                             class="progress-bar"
                             style="width: {{porcentaje_progreso}}%;">
                        </div>
                    </div>
                </div>

                <div class="text-center mb-4">
                    <div id="timer-display" class="mx-auto">
                        <span id="timer">{{ timer }}</span>
                    </div>
                </div>

                <h5 class="h5 text-center mb-2 fw-normal">Categoria: {{pregunta.categoria}}</h5>
                <h2 class="h3 text-center mb-4 fw-normal">{{pregunta.texto_pregunta}}</h2>


                <input type="hidden" name="pregunta_id" value="{{ pregunta_id }}">

                <div class="d-grid gap-3">
                    {{#respuestas}}
                        <div>
                            <input  type="radio"
                                    class="btn-check"
                                    name="respuesta_id"
                                    id="opcion-{{ respuesta_id }}"
                                    value="{{ respuesta_id }}"
                                    autocomplete="off"
                                    required>

                            <label class="btn btn-outline-primary btn-lg w-100" for="opcion-{{ respuesta_id }}">
                                {{ texto_respuesta }}
                            </label>
                        </div>
                    {{/respuestas}}
                </div>

                <button type="submit" class="btn btn-success btn-lg w-100 mt-4">Responder</button>
            </form>
        </div>
    </div>
</div>

<script>
    const timerElement = document.getElementById('timer');
    const formElement = document.getElementById('pregunta-form');
    let tiempoRestante = parseInt(timerElement.innerText);

    let intervalo = setInterval(() => {
        tiempoRestante--;
        timerElement.innerText = tiempoRestante;

        if (tiempoRestante <= 0) {
            clearInterval(intervalo);
            bloquearOpciones();
            formElement.submit();
        }
    }, 1000);

    formElement.addEventListener('submit', function () {
        clearInterval(intervalo);
        bloquearOpciones();
    });

    function bloquearOpciones() {
        document.querySelectorAll('input[name="respuesta_id"]').forEach(radio => {
            radio.disabled = true;
            radio.nextElementSibling.classList.add('disabled');
        });
    }

    let seFueDeLaPestana = false;

    document.addEventListener("visibilitychange", () => {
        if (document.visibilityState === 'hidden' && !seFueDeLaPestana && intervalo) {
            seFueDeLaPestana = true;
            clearInterval(intervalo);
            intervalo = null;

            Swal.fire({
                title: '¡Tramposo!',
                text: "Cambiaste de pestaña. Esta pregunta se marcará como incorrecta.",
                icon: 'warning',
                confirmButtonText: 'Entendido',
                allowOutsideClick: false,
                allowEscapeKey: false
            }).then(() => {
                bloquearOpciones();
                formElement.submit();
            });
        }
    });
</script>


<style>
    #timer-display {
        font-size: 2.5em;
        font-weight: 700;
        color: #dc3545;

        width: 80px;
        height: 80px;
        line-height: 75px;
        text-align: center;

        border: 4px solid #dc3545;
        border-radius: 50%;
        background-color: #fff;

        box-shadow: 0 4px 10px rgba(0,0,0,0.05);
    }

    .btn-check:checked + .btn-outline-primary {
        background-color: #0d6efd;
        color: #fff;
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.5);
    }


    .btn-outline-primary {
        padding-top: 1rem;
        padding-bottom: 1rem;
        text-align: left;
        padding-left: 1.5rem;
    }

</style>