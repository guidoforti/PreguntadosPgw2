<link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
<script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>

<div class="container my-5">
    <div class="row g-4">
        <!-- COLUMNA IZQUIERDA: Datos del usuario -->
        <div class="col-12 col-md-4 text-center">
            <!-- Avatar -->
            <div class="mb-4">
                {{#usuario.url_foto_perfil}}
                <img src="/{{usuario.url_foto_perfil}}"
                     alt="{{usuario.nombre_completo}}"
                     class="rounded-circle"
                     style="width: 150px; height: 150px; object-fit: cover; border: 4px solid #dee2e6;">
                {{/usuario.url_foto_perfil}}
                {{^usuario.url_foto_perfil}}
                <div class="rounded-circle d-flex align-items-center justify-content-center bg-secondary text-white"
                     style="width: 150px; height: 150px; font-size: 3rem; font-weight: bold; margin: 0 auto;">
                    {{usuario.nombre_completo.[0]}}
                </div>
                {{/usuario.url_foto_perfil}}
            </div>

            <!-- Nombre y usuario -->
            <h2 class="mb-1">{{usuario.nombre_completo}}</h2>
            <p class="text-muted mb-3">@{{usuario.nombre_usuario}}</p>

            <!-- Rango -->
            <div class="mb-4">
                <img src="/{{usuario.rango.imagen}}"
                     alt="{{usuario.rango.nombre}}"
                     style="width: 50px; height: 50px; margin-right: 0.5rem;">
                <span class="{{usuario.rango.color}} fw-bold fs-5">{{usuario.rango.nombre}}</span>
            </div>

            <!-- Ranking score -->
            <div class="card shadow-sm mb-4">
                <div class="card-body text-center">
                    <h3 class="display-4 mb-0 text-primary">{{usuario.ranking}}</h3>
                    <small class="text-muted">Puntos de Ranking</small>
                </div>
            </div>

            <!-- QR Code -->
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0">üì± C√≥digo QR</h6>
                </div>
                <div class="card-body text-center">
                    <img src="{{qr_url}}"
                         alt="QR Code"
                         class="img-fluid"
                         style="max-width: 200px;">
                    <p class="text-muted small mt-2">Escanea para compartir</p>
                </div>
            </div>
        </div>

        <!-- COLUMNA DERECHA: Mapa y estad√≠sticas -->
        <div class="col-12 col-md-8">
            <!-- Card: Ubicaci√≥n con mapa -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-success text-white">
                    <h6 class="mb-0">üìç Ubicaci√≥n</h6>
                </div>
                <div class="card-body">
                    <p class="mb-3">
                        <strong>{{usuario.ubicacion_completa}}</strong>
                    </p>
                    <div id="map" style="width: 100%; height: 300px; border-radius: 0.375rem; overflow: hidden;"></div>
                </div>
            </div>

            <!-- Card: Estad√≠sticas -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-warning text-dark">
                    <h6 class="mb-0">üìä Estad√≠sticas</h6>
                </div>
                <div class="card-body">
                    {{#estadisticas}}
                    <div class="row text-center g-3">
                        <div class="col-6 col-sm-3">
                            <div class="p-3 bg-light rounded">
                                <h5 class="mb-0">{{total_partidas}}</h5>
                                <small class="text-muted">Total Partidas</small>
                            </div>
                        </div>
                        <div class="col-6 col-sm-3">
                            <div class="p-3 bg-success bg-opacity-10 rounded">
                                <h5 class="mb-0 text-success">{{victorias}}</h5>
                                <small class="text-muted">Victorias</small>
                            </div>
                        </div>
                        <div class="col-6 col-sm-3">
                            <div class="p-3 bg-light rounded">
                                <h5 class="mb-0">{{puntaje_promedio}}</h5>
                                <small class="text-muted">Promedio</small>
                            </div>
                        </div>
                        <div class="col-6 col-sm-3">
                            <div class="p-3 bg-info bg-opacity-10 rounded">
                                <h5 class="mb-0 text-info">{{mejor_puntaje}}/10</h5>
                                <small class="text-muted">Mejor</small>
                            </div>
                        </div>
                    </div>
                    {{/estadisticas}}
                    {{^estadisticas}}
                    <p class="text-muted text-center mb-0">Sin datos disponibles</p>
                    {{/estadisticas}}
                </div>
            </div>

            <!-- Card: √öltimas partidas -->
            {{#historial}}
            <div class="card shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <h6 class="mb-0">üéÆ √öltimas Partidas</h6>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover table-sm mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th><small>Fecha</small></th>
                                    <th><small>Puntaje</small></th>
                                    <th><small>Resultado</small></th>
                                    <th class="text-end"><small>Pts</small></th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#historial}}
                                <tr>
                                    <td><small>{{fecha_formateada}}</small></td>
                                    <td><strong>{{puntaje}}/10</strong></td>
                                    <td><span class="badge bg-{{badge_clase}}">{{resultado_texto}}</span></td>
                                    <td class="text-end">
                                        <span class="fw-bold {{puntos_clase}}">{{puntos_signo}}{{puntos_ranking}}</span>
                                    </td>
                                </tr>
                                {{/historial}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            {{/historial}}
        </div>
    </div>

    <!-- Bot√≥n volver -->
    <div class="mt-4">
        <a href="/ranking/verRanking" class="btn btn-outline-secondary">‚Üê Volver al Ranking</a>
    </div>
</div>

<script>
    var ubicacion = "{{usuario.ubicacion_completa}}";

    if (!ubicacion || ubicacion.trim() === '') {
        document.getElementById('map').innerHTML = '<div class="p-4 text-center text-muted"><p>Ubicaci√≥n no disponible</p></div>';
    } else {
        fetch('/proxyNominatim.php?q=' + encodeURIComponent(ubicacion))
            .then(response => response.json())
            .then(data => {
                if (data.length > 0) {
                    var result = data[0];
                    var lat = parseFloat(result.lat);
                    var lon = parseFloat(result.lon);

                    var map = L.map('map').setView([lat, lon], 6);

                    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                        attribution: '¬© OpenStreetMap contributors',
                        maxZoom: 19
                    }).addTo(map);

                    L.marker([lat, lon])
                        .bindPopup('<b>{{usuario.nombre_usuario}}</b><br/>{{usuario.ubicacion_completa}}')
                        .addTo(map);
                } else {
                    document.getElementById('map').innerHTML = '<div class="p-4 text-center text-muted"><p>No se encontr√≥ la ubicaci√≥n</p></div>';
                }
            })
            .catch(error => {
                console.error('Error al cargar ubicaci√≥n:', error);
                document.getElementById('map').innerHTML = '<div class="p-4 text-center text-muted"><p>Error al cargar el mapa</p></div>';
            });
    }
</script>

