    .card {
        border: none;
    }

    .card-header {
        font-weight: 600;
        border-bottom: 2px solid rgba(0,0,0,.125);
    }

    .display-4 {
        color: #0d6efd;
        font-weight: 700;
    }

    .badge {
        font-size: 0.85rem;
        padding: 0.4rem 0.6rem;
    }

    @media (max-width: 767.98px) {
        #map {
            height: 250px !important;
        }

        .table-sm {
            font-size: 0.8rem;
        }

        .table th, .table td {
            padding: 0.5rem !important;
        }
    }
</style>
